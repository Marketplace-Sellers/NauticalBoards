{"components/cart/shipping-calculator":"{{lang 'cart.shipping_calculator.title'}}\n{{#if shipping_cost}}\n  <span class=\"shipping-toggle\" data-shipping-calculator-toggle>{{shipping_cost.formatted}}</span>\n{{else}}\n  {{#if shipping_cost \"===\" 0}}\n    {{#if provider}}\n      <span class=\"shipping-toggle\" data-shipping-calculator-toggle>{{provider.description}}</span>\n    {{/if}}\n  {{else}}\n    <span class=\"shipping-toggle\" data-shipping-calculator-toggle>{{lang 'cart.shipping_calculator.add_info'}}</span>\n  {{/if}}\n{{/if}}\n\n<div class=\"shipping-calculator\" data-shipping-calculator>\n  <form class=\"form form-shipping\">\n    <div class=\"form-field field-country\">\n      <label class=\"form-label label-country\" for=\"shipping-country\">\n        <span class=\"form-label-text\">{{lang 'cart.shipping_calculator.select_a_country'}}</span>\n        <span class=\"form-field-control\">\n          <span class=\"form-select-wrapper\">\n            <select class=\"form-select\" id=\"shipping-country\" name=\"shipping-country\" data-field-type=\"Country\">\n              <option>{{lang 'cart.shipping_calculator.select_a_country'}}</option>\n              {{#each countries}}\n                <option value=\"{{id}}\" {{#if selected}}selected=\"selected\"{{/if}}>\n                  {{name}}\n                </option>\n              {{/each}}\n            </select>\n          </span>\n        </span>\n      </label>\n    </div>\n\n    <div class=\"form-field field-state-zip\">\n      <label class=\"form-label label-state\" for=\"shipping-state\">\n        <span class=\"form-label-text\">{{lang 'cart.shipping_calculator.select_a_state'}}</span>\n        <span class=\"form-field-control\">\n          <span class=\"form-select-wrapper\">\n            <select class=\"form-select\" id=\"shipping-state\" name=\"shipping-state\" data-field-type=\"State\">\n              <option>{{lang 'cart.shipping_calculator.select_a_state'}}</option>\n              {{#each states}}\n                <option value=\"{{id}}\" {{#if selected}}selected=\"selected\"{{/if}}>\n                  {{name}}\n                </option>\n              {{/each}}\n            </select>\n          </span>\n        </span>\n      </label>\n\n      <label class=\"form-label label-zip\" for=\"shipping-zip\">\n        <span class=\"form-label-text\">{{lang 'cart.shipping_calculator.zip_postal_code'}}</span>\n        <input class=\"form-input\" type=\"text\" id=\"shipping-zip\" name=\"shipping-zip\" value=\"{{selected_zip}}\" placeholder=\"{{lang 'cart.shipping_calculator.zip_postal_code'}}\">\n      </label>\n    </div>\n\n    <div class=\"form-actions\">\n      <button class=\"button\">{{lang 'cart.shipping_calculator.estimate_shipping'}}</button>\n    </div>\n  </form>\n\n  <div class=\"shipping-quotes\" data-shipping-quotes></div>\n  <div class=\"shipping-errors\" data-shipping-errors></div>\n</div>\n"}
